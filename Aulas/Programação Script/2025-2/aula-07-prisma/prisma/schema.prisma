generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Modelos do padr√£o MVC -- MODELS
model Catalogo {
  id       Int       @id @default(autoincrement())
  nome     String
  produtos Produto[]
}

model Produto {
  id         Int      @id @default(autoincrement())
  nome       String
  preco      Float
  catalogoId Int
  catalogo   Catalogo @relation(fields: [catalogoId], references: [id])
}
